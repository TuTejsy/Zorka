{
  "name": "zorka",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "react-native start",
    "restart": "rm -rf node_modules && yarn cache clean && watchman watch-del-all && yarn && yarn pod-reinstall && yarn fix-bitcore-lib && yarn postinstall && yarn start --reset-cache",
    "pod-install": "cd ./ios && pod install --repo-update && cd ..",
    "pod-reinstall": "cd ./ios && rm -rf ~/Library/Caches/CocoaPods && rm -rf Pods && pod install --repo-update && cd ..",
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "test": "jest",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "postinstall": "yarn postinstall-crypto",
    "postinstall-crypto": "sed -i -e \"s/var Script = function Script(from) {/var Script = function Script(from) { Address = require('..\\/address');/g\" ./node_modules/bitcore-lib/lib/script/script.js",
    "fix-bitcore-lib": "node scripts/fix-bitcore-lib.js"
  },
  "dependencies": {
    "@expo/react-native-action-sheet": "^3.11.0",
    "@react-native-clipboard/clipboard": "^1.9.0",
    "bitcore-lib": "^8.25.10",
    "crypto-js": "3.1.9-1",
    "eslint-plugin-json": "^3.1.0",
    "ethers": "^5.5.1",
    "moment": "^2.29.1",
    "nomics": "^0.5.7",
    "react": "17.0.2",
    "react-native": "0.68.0",
    "react-native-navigation": "^7.22.3",
    "react-native-navigation-hooks": "^6.3.0",
    "react-native-qrcode-svg": "^6.1.1",
    "react-native-randombytes": "^3.6.1",
    "react-native-sensitive-info": "^5.5.8",
    "react-native-svg": "^12.1.1",
    "react-native-svg-icon": "^0.10.0",
    "react-native-view-shot": "^3.1.2",
    "react-redux": "^7.2.5",
    "realm": "10.20.0-beta.3",
    "redux-devtools-extension": "^2.13.9",
    "redux-saga": "^1.1.3"
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@babel/runtime": "^7.12.5",
    "@react-native-community/eslint-config": "^2.0.0",
    "@types/bitcore-lib": "^0.15.3",
    "@types/crypto-js": "^4.0.2",
    "@types/jest": "^26.0.23",
    "@types/react-native": "^0.65.0",
    "@types/react-test-renderer": "^17.0.1",
    "babel-jest": "^26.6.3",
    "babel-plugin-inline-import": "^3.0.0",
    "babel-plugin-module-resolver": "^4.1.0",
    "eslint": "^7.14.0",
    "eslint-plugin-detox": "^1.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-redux-saga": "^1.2.1",
    "jest": "^26.6.3",
    "metro-react-native-babel-preset": "^0.66.2",
    "node-libs-react-native": "^1.2.1",
    "react-native-fs": "^2.18.0",
    "react-test-renderer": "17.0.2",
    "typescript": "^3.8.3"
  },
  "resolutions": {
    "@types/react": "^17"
  },
  "jest": {
    "preset": "react-native",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
