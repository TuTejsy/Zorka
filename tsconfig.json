
{
  "compilerOptions": {
    "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "isolatedModules": true,
      "jsx": "react",
      "lib": ["es6", "es2017", "ES2019.Array"],
      "moduleResolution": "node",
      "noEmit": true,
      "strict": true,
      "target": "ESNext",
      "baseUrl": ".",
      "resolveJsonModule": true,
    "paths": {
        "*": ["src/*"],
        "app/*": [ "src/*" ],
        "appComponents/*": [ "src/components/*" ],
        "appContainers/*": [ "src/containers/*" ],
        
        "appApi": [ "src/api" ],
        "appApi/client": [ "src/api/client" ],
        "appApi/server": [ "src/api/server" ],
        "appState": [ "src/state" ],
        "appData": [ "src/data" ],
        "appUtils": [ "src/utils" ],
        "appHooks": [ "src/hooks" ],
        "appHooks/*": [ "src/hooks/*" ],
        "appAssets/*": [ "src/assets/*" ],
        "appConfig/*": [ "src/config/*" ],
        "appEmitters": [ "src/emitters" ],
        "appDatabase": [ "src/database" ],
        "appWatchers": [ "src/watchers" ],
        "appConstants": [ "src/constants" ],
        "appOperations": [ "src/operations" ],
        
        "zorka-native": [ "zorka-native"],
    },
  },
  "exclude": [
    "node_modules", "babel.config.js", "metro.config.js", "jest.config.js"
  ],
}
